# backend/.env.example
# Copy this file to .env and update the values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./data/pulse_one.db

# File Upload Configuration
MAX_FILE_SIZE=104857600
# 100MB in bytes
WARNING_FILE_SIZE=52428800
# 50MB in bytes
UPLOAD_DIR=./uploads

# Flux AI Configuration (Optional - for enhanced categorization)
FLUX_AI_API_URL=https://api.flux.ai
FLUX_AI_API_KEY=your_flux_api_key_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Processing Configuration
PROCESSING_QUEUE_CONCURRENCY=3
AUTO_CATEGORIZATION_THRESHOLD=0.7
MAX_DYNAMIC_CATEGORIES=7

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/pulse-one.log

# Development Configuration
ENABLE_FILE_LOGGING=true
ENABLE_DETAILED_ERRORS=true
ENABLE_API_DOCS=true