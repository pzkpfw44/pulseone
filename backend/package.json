{
  "name": "pulse-one-backend",
  "version": "1.0.0",
  "description": "Pulse One Backend API with Enhanced Knowledge Feed",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node scripts/setup.js",
    "init-db": "node scripts/initDatabase.js",
    "test": "jest",
    "clean": "rm -rf uploads/* logs/* data/*.db",
    "reset": "npm run clean && npm run init-db",
    "logs": "tail -f logs/pulse-one.log",
    "logs:error": "tail -f logs/error.log",
    "logs:knowledge": "tail -f logs/knowledge-feed.log"
  },
  "keywords": ["pulse-one", "hr", "ai", "knowledge-management"],
  "author": "Pulse One Team",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6",
    "sequelize": "^6.35.0",
    "axios": "^1.6.0",
    "node-cron": "^3.0.2",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "xlsx": "^0.18.5",
    "sharp": "^0.33.0",
    "uuid": "^9.0.1",
    "mime-types": "^2.1.35",
    "file-type": "^19.0.0",
    "bull": "^4.12.0",
    "redis": "^4.6.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}